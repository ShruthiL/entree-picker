<div class="background-color">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "entree-text" %>
      <%= f.email_field :email, class: 'display-none', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "entree-text" %>
      <%= f.password_field :password, class: 'display-none', autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "entree-text" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
